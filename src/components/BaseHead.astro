---
import type { SiteMeta } from "@/types";
import { siteConfig } from "@/site-config";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import posthog from "posthog-js";

type Props = SiteMeta;

const { title, description, ogImage, articleDate } = Astro.props;

const titleSeparator = "â€¢";
const siteTitle = `${title} ${titleSeparator} ${siteConfig.title}`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(
	ogImage ? ogImage : `${import.meta.env.BASE_URL}/apple-touch-icon.png`,
	Astro.url,
).href;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<title>{siteTitle}</title>
<ViewTransitions />
<meta name="google-site-verification" content="3rZF1XXcVoErHmbNFPurP7_ZhcJ-pRB7gKHj6SDIWRU" />
