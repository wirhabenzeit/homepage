---
const { tags, collection, class: className } = Astro.props;
---

<p class:list={["mt-1", className]}>
	<svg
		aria-hidden="true"
		focusable="false"
		xmlns="http://www.w3.org/2000/svg"
		class="me-1 inline-block h-6 w-6"
		viewBox="0 0 24 24"
		stroke-width="1.5"
		stroke="currentColor"
		fill="none"
		stroke-linecap="round"
		stroke-linejoin="round"
	>
		<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
		<path
			d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z"
		></path>
		<path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116"></path>
		<path d="M6 9h-.01"></path>
	</svg>
	{
		tags
			.filter((tag) => tag != "project" && tag != "teaching" && tag != "research")
			.map((tag, i) => (
				<>
					<a
						class="cactus-link inline-block text-xs"
						aria-label={`View more posts with the tag ${tag}`}
						href={`${import.meta.env.BASE_URL}/${collection}/tags/${tag}/`}
						data-pagefind-filter="tag"
					>
						#{tag}
					</a>
				</>
			))
	}
</p>
