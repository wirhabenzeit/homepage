const socialLinks: Array<{
	icon: IconDefinition;
	link: string;
	isWebmention?: boolean;
}> = [
	{
		icon: faGithub,
		link: "https://github.com/wirhabenzeit",
	},
	{
		icon: faInstagram,
		link: "https://www.instagram.com/wirhabenzeit/",
	},
	{
		icon: faLinkedin,
		link: "https://www.linkedin.com/in/dominik-schr√∂der-695365222/",
	},
	{
		icon: faEnvelope,
		link: "mailto:dschroeder@ethz.ch",
